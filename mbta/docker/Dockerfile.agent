FROM python:3.11-slim

WORKDIR /app

# Install dependencies directly
RUN pip install --no-cache-dir \
    fastapi==0.109.0 \
    uvicorn[standard]==0.27.0 \
    httpx==0.26.0 \
    pydantic==2.5.3 \
    requests==2.31.0

# Copy source code
COPY src/ ./src/
COPY config/ ./config/

# Default command (will be overridden by docker-compose)
CMD ["python", "-m", "uvicorn", "src.agents.alerts.main:app", "--host", "0.0.0.0", "--port", "8001"]